@model SMM_ThomasMore.Domain.User
@{
  Layout = null;
}

<li role="presentation" class="dropdown">
    <a href="javascript:;" class="dropdown-toggle info-number" data-toggle="dropdown" aria-expanded="false">
        <i class="fa fa-envelope-o"></i>
        @if (Model.getUnreadAlerts("notification").Count > 0)
        {
        <span class="badge bg-green">@Html.DisplayFor(m => m.getUnreadAlerts("notification").Count)</span>
        }
    </a>
    <ul id="menu1" class="dropdown-menu list-unstyled msg_list" role="menu">
        @for (int i = 0; i < Model.getUnreadAlerts("notification").Count; i++)
        {
            { Html.RenderPartial("SingleAlert", Model.getUnreadAlerts("notification")[i]); }
        }
    </ul>
</li>
